{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./app",
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowUnusedLabels": false,
    "target": "ES6",
    "typeRoots": ["./node_modules/@types", "./_types/declarations"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/api/*": ["./_api/*"],
      "@/helpers": ["./_helpers"],
      "@/helpers/*": ["./_helpers/*"],
      "@/components": ["./_components"],
      "@/components/*": ["./_components/*"],
      "@/store/*": ["../store/*"],
      "@/styles": ["./_styles"],
      "@/styles/*": ["./_styles/*"],
      "@/types": ["./_types"],
      "@/types/*": ["./_types/*"],
      "@/typeGuards/*": ["./_typeGuards/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
