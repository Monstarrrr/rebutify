# Template for a file containing project environment variables.
# Make a copy of this file named .env
# Manage your secrets and configure global project flags in .env


# Do not change after generating! Users will be logged out if not rotated properly
# Should be the same between all project members.
DJANGO_SECRET_KEY=
# Turns on debug features
DJANGO_DEBUG=True

# Deployment stage
STAGE=local
# Path to admin panel
DJANGO_ADMIN_PATH=admin/
# Hostnames, comma separated
DJANGO_HOSTS=localhost,127.0.0.1,192.168.1.14:3000,0.0.0.0:3000
# Name of website (not strictly a URL)
SITE_NAME=rebutify.org
# URL of frontend
FRONTEND_SITE_URL=localhost:3000

# Typesense
TYPESENSE_SECRET_KEY=
TYPESENSE_HOST=
TYPESENSE_PORT=
TYPESENSE_PROTOCOL=

# Uses a local SQLite DB
DEBUG_DB=True

# Remote database settings
POSTGRES_NAME=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=

# Amount of objects per page
PAGE_SIZE=

# Write emails to a local file
DEBUG_MAIL=True

# SMTP settings
EMAIL_HOST=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_PORT=
EMAIL_USE_TLS=
EMAIL_FROM=

# Production HTTPS settings (leave empty for local dev!)
DJANGO_SECURE_HSTS_SECONDS=
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=
DJANGO_SECURE_SSL_REDIRECT=
DJANGO_SESSION_COOKIE_SECURE=
DJANGO_CSRF_COOKIE_SECURE=

# For testing
SAMPLE_USER_PASSWORD=
